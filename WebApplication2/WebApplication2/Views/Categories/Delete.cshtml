@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>מחיקה</h1>

<h3>האם אתה בטוח שברצונך למחוק?</h3>
<div>
    <h4>קטגוריה</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
		<dt class="col-sm-2">			
			@Html.DisplayNameFor(model => model.imgPath)
		</dt>
		<dd class="col-sm-10">
			<img height="40" width="40" src="/@Model.imgPath" />
		</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="מחיקה" class="btn btn-danger" /> |
        <a asp-action="Index">חזור לרשימת הקטגוריות</a>
    </form>
</div>
