@model WebApplication2.Models.Order

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="@OrderStatuses.OPEN">פתוח</option>
                    <option value="@OrderStatuses.WAITING">ממתין לטיפול</option>
                    <option value="@OrderStatuses.IN_PROCESS">בטיפול</option>
                    <option value="@OrderStatuses.CLOSE">סגור</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group action-buttons">
                <input type="submit" value="יצירה" class="btn btn-primary save" />
                <div>
                    <a class="btn btn-secondary" asp-action="Index">ביטול</a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .action-buttons {
        display: flex;
    }

    .save {
        margin-left: 10px;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
