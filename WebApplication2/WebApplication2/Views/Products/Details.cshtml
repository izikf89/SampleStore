@model WebApplication2.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>פרטים</h1>

<div>
    <h4>מוצר</h4>
    <hr />
    <div class="item-detailes">
        <div>
            <span class="description">@Html.DisplayNameFor(model => model.Name)</span>:
            <span>@Html.DisplayFor(model => model.Name)</span>
        </div>
        <div>
            <span class="description">@Html.DisplayNameFor(model => model.Price)</span>:
