@model WebApplication2.Models.productImage

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>productImage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form enctype="multipart/form-data" asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="ProductId" />
			<<div class="form-group">
				<label asp-for="img" class="control-label"></label>
				<div class="custom-file">
					<input asp-for="img" class="custom-file-input" id="customFile">
					<label class="custom-file-label" for="customFile">תמונה חדשה</label>
				</div>
				<span asp-validation-for="img" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label for="imgDisplay" class="control-label">תמונה נוכחית</label>
				<img src="/@Model.Image" />
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
