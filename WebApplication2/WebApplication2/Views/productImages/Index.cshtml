@model IEnumerable<WebApplication2.Models.productImage>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>תמונת מוצרים</h1>

<p>
    <a asp-action="Create">צור חדש</a>
</p>
<table class="table">
    @foreach (var item in Model) {
        <div>
            <img class="category-image" src="/@item.Image" />
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">מחיקה</a>
        </div>
    }
</table>

<style>
    .category-image {
        width: 200px;
        margin-left: 20px;
    }
</style>
